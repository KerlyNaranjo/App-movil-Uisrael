<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KerlyNaranjoExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Label Text="Usuario" />
            <Entry Placeholder="Ingrese su usuario" x:Name="txtUser"/>
            <Label Text="Contraseña" />
            <Entry Placeholder="Ingrese su contraseña" x:Name="txtPass" IsPassword="True"/>
            <Button Text="Ingresar" Clicked="btnIngresar_Clicked" BackgroundColor="#003164" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>